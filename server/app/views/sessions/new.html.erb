<% provide(:title, "Log in") %>
<h1>Log in</h1>

<%= form_for :session, html: { multipart: true } do |f| %>
<form>
	

	<div class="form-group row">
	    <%= f.label :email, :class => "col-sm-2 col-form-label" %>
	    <div class="col-sm-10">
	        <%= f.email_field :session_email %>
	    </div>
	</div>

	<div class="form-group row">
	    <%= f.label :password, :class => "col-sm-2 col-form-label" %>
	    <div class="col-sm-10">
	        <%= f.password_field :session_password %>
	    </div>
	</div>

	<div class="form-group row">
	    <div class="col-sm-10">
	        <%= f.submit "Log in", class: 'btn btn-primary' %>
	    </div>
	</div>
</form>

<p>New user? <%= link_to "Sign up now!", new_user_path %></p>

<%= link_to 'Back', users_path%>
<% end %>

